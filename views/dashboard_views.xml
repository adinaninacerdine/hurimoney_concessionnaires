<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Dashboard -->
    <record id="view_hurimoney_dashboard_form" model="ir.ui.view">
        <field name="name">hurimoney.dashboard.form</field>
        <field name="model">hurimoney.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard HuriMoney" create="0" edit="0">
                <sheet>
                    <div class="o_hurimoney_dashboard">
                        <h1>Tableau de bord HuriMoney</h1>
                        
                        <!-- KPIs principaux -->
                        <div class="row mt-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Concessionnaires</h5>
                                        <h2><field name="active_concessionnaires"/> / <field name="total_concessionnaires"/></h2>
                                        <p class="text-muted">Actifs / Total</p>
                                        <button name="action_view_active_concessionnaires" type="object" class="btn btn-sm btn-primary">
                                            Voir détails
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Volume Journalier</h5>
                                        <h2><field name="daily_volume" widget="monetary"/></h2>
                                        <p class="text-muted">Aujourd'hui</p>
                                        <button name="action_view_today_transactions" type="object" class="btn btn-sm btn-primary">
                                            Transactions du jour
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Volume Hebdomadaire</h5>
                                        <h2><field name="weekly_volume" widget="monetary"/></h2>
                                        <p class="text-muted">Cette semaine</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Volume Mensuel</h5>
                                        <h2><field name="monthly_volume" widget="monetary"/></h2>
                                        <p class="text-muted">Ce mois</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- KPIs secondaires -->
                        <div class="row mt-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Commissions Totales</h5>
                                        <h3><field name="total_commissions" widget="monetary"/></h3>
                                        <p class="text-muted">Ce mois</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Moy. Trans/Jour</h5>
                                        <h3><field name="avg_daily_transactions"/></h3>
                                        <p class="text-muted">Par concessionnaire actif</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Suspendus</h5>
                                        <h3><field name="suspended_concessionnaires"/></h3>
                                        <p class="text-muted">Concessionnaires</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h5 class="card-title">Top Performer</h5>
                                        <h4><field name="top_performer_id"/></h4>
                                        <p class="text-muted">Meilleur score</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Graphiques -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Évolution des transactions</h5>
                                        <div id="chart_container">
                                            <!-- Les graphiques seront rendus ici via JavaScript -->
                                            <field name="chart_data" invisible="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Dashboard -->
    <record id="action_hurimoney_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">hurimoney.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>