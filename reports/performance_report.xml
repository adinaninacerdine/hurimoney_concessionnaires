<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_performance_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Rapport de Performance - <span t-esc="date_from"/> au <span t-esc="date_to"/></h2>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <h3>Top 10 Concessionnaires</h3>
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Rang</th>
                                        <th>Code</th>
                                        <th>Nom</th>
                                        <th>Zone</th>
                                        <th>Transactions</th>
                                        <th>Volume</th>
                                        <th>Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="top_performers" t-as="perf">
                                        <tr>
                                            <td><span t-esc="perf_index + 1"/></td>
                                            <td><span t-esc="perf.code"/></td>
                                            <td><span t-esc="perf.name"/></td>
                                            <td><span t-esc="perf.zone"/></td>
                                            <td><span t-esc="perf.total_transactions"/></td>
                                            <td><span t-esc="perf.total_volume" t-options='{"widget": "monetary"}'/></td>
                                            <td><span t-esc="perf.performance_score"/>%</td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-6">
                            <h3>RÃ©partition par Zone</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Zone</th>
                                        <th>Concessionnaires</th>
                                        <th>Volume</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="zone_stats" t-as="zone">
                                        <tr>
                                            <td><span t-esc="zone['zone']"/></td>
                                            <td><span t-esc="zone['count']"/></td>
                                            <td><span t-esc="zone['volume']" t-options='{"widget": "monetary"}'/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="col-6">
                            <h3>Types de Transactions</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Type</th>
                                        <th>Nombre</th>
                                        <th>Volume</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="transaction_types" t-as="ttype">
                                        <tr>
                                            <td><span t-esc="ttype['type']"/></td>
                                            <td><span t-esc="ttype['count']"/></td>
                                            <td><span t-esc="ttype['volume']" t-options='{"widget": "monetary"}'/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>